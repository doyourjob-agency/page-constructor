{
  "extends": "@gravity-ui/tsconfig/tsconfig",
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "resolveJsonModule": true,
    "rootDirs": ["src"],
    "outDir": "configure",
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src/configure.ts", "types/**/*.d.ts"]
}
